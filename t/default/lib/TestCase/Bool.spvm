package TestCase::Bool {
  sub basic : int () {
    my $true = SPVM::Bool->TRUE;
    my $false = SPVM::Bool->FALSE;
    
    unless ($true->val == 1) {
      return 0;
    }
    
    unless ($false->val == 0) {
      return 0;
    }
    
    unless ($true == SPVM::Bool->TRUE) {
      return 0;
    }
    
    unless ($false == SPVM::Bool->FALSE) {
      return 0;
    }
    
    return 1;
  }
}
