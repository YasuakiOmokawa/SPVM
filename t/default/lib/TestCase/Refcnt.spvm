package TestCase::Refcnt {
  use TestCase::Minimal;
  sub refcnt_test : int () {
    my $minimal1 = new TestCase::Minimal;
    
    unless (refcnt $minimal1 == 1) {
      return 0;
    }
    
    my $minimal2 : TestCase::Minimal;

    unless (refcnt $minimal2 == 0) {
      return 0;
    }
    
    return 1;
  }
}
