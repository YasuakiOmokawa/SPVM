  sub test_to_barray : int () {
    unless (SPVM::String->new_with_string("abc")->to_barray eq "abc") {
      return 0;
    }
    my $text = SPVM::String->new_with_capacity(100);
    $text->replace(0, 1, "a");
    unless ($text->to_barray eq "a") {
      return 0;
    }
    return 1;
  }

  sub test_equals : int () {
    my $lhs = SPVM::String->new_with_string("abc");
    my $rhs = SPVM::String->new_with_capacity(100);
    $rhs->replace(0, 0, "abc");
    unless ($lhs->equals($rhs) && $rhs->equals($lhs)) {
      return 0;
    }
    unless (!$lhs->equals(SPVM::String->new_with_string("ab"))) {
      return 0;
    }
    return 1;
  }
