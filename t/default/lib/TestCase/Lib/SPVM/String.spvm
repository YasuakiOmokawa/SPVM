package TestCase::Lib::SPVM::String {
  use SPVM::String;

  sub check_fields : int ($text : SPVM::String, $capacity : int, $length : int) {
    # check_fields fields
    unless ($text->capacity == $capacity && $text->length == $length) {
      warn("String fields mismatch.\n\t" .
          "got:      (capacity: " . $text->capacity . ", length: " . $text->length . ")\n\t" .
          "expected: (capacity: " . $capacity . ", length: " . $length . ")");
      return 0;
    }
    return 1;
  }

  sub equals_text_deeply : int ($got : SPVM::String, $expected : SPVM::String) {
    unless ($got->length == $expected->length) {
      warn("Length mismatch. Try check_fields() first");
      return 0;
    }
    my $got_value = $got->_copy_value;
    my $expected_value = $expected->_copy_value;
    
    for (my $i = 0; $i < $expected->length; $i++) {
      unless ($got_value->[$i] == $expected_value->[$i]) {
        my $warn_message = "String mismatch.";
        $warn_message .= "\tgot:      ";
        for (my $j = 0; $j < $got->length; $j++) {
          if ($got_value->[$j] == 0) {
            $warn_message .= "(none)";
          }
          else {
            $warn_message .= $got_value->[$j];
          }
        }
        $warn_message .= "\n\texpected: ";
        for (my $j = 0; $j < $expected->length; $j++) {
          if ($expected_value->[$j] == 0) {
            $warn_message .= "(none) ";
          }
          else {
            $warn_message .= $expected_value->[$j] . " ";
          }
        }
        warn ($warn_message);
        return 0;
      }
    }
    return 1;
  }

  sub check_string : int ($target : SPVM::String, $expected : byte []) {
    unless ($target->capacity == @$expected) {
      return 0;
    }
    my $target_value = $target->_copy_value;
    for (my $i = 0; $i < $target->capacity; ++$i) {
      unless ($target_value->[$i] == $expected->[$i]) {
        return 0;
      }
    }
    return 1;
  }

  sub test_ctor_default : int () {
    unless (check_fields(SPVM::String->new, 16, 0)) {
      return 0;
    }
    unless (check_string(SPVM::String->new, new byte[16])) {
      return 0;
    }
    return 1;
  }

  sub test_ctor_with_capacity : int () {
    unless (check_fields(SPVM::String->new_with_capacity(20000), 20000, 0)) {
      return 0;
    }
    unless (check_string(SPVM::String->new_with_capacity(20000), new byte[20000])) {
      return 0;
    }
    eval {
      SPVM::String->new_with_capacity(0);
    };
    unless ($@) {
      return 0;
    }
    $@ = undef;
    eval {
      SPVM::String->new_with_capacity(-1);
    };
    unless ($@) {
      return 0;
    }
    $@ = undef;
    return 1;
  }

  sub test_ctor_with_string : int () {
    my $text = SPVM::String->new_with_string("");
    unless (check_fields($text, 0, 0)) {
      return 0;
    }
    unless (check_string($text, new byte [0])) {
      return 0;
    }

    $text = SPVM::String->new_with_string("abc");
    unless (check_fields($text, 3, 3)) {
      return 0;
    }
    unless (check_string($text, [(byte) 'a', 'b', 'c'])) {
      return 0;
    }

    return 1;
  }

  sub test_length : int () {
    unless (SPVM::String->new->length == 0) {
      return 0;
    }
    unless (SPVM::String->new_with_string("a")->length == 1) {
      return 0;
    }
    return 1;
  }

  sub test_substr : int () {
    unless (SPVM::String->new_with_string("abcd")->substr(1, 2)->to_barray eq "bc") {
      return 0;
    }
    eval {
      SPVM::String->new_with_string("a")->substr(1, 1)->to_barray;
    };
    unless ($@) {
      return 0;
    }
    eval {
      SPVM::String->new_with_string("a")->substr(0, 2)->to_barray;
    };
    unless ($@) {
      return 0;
    }
    
    $@ = undef;
    
    return 1;
  }

  sub test_substr_copy_on_write : int () {
    {
      my $text = SPVM::String->new_with_string("abc");
      my $temp = $text->_copy_value;
      unless (refcnt $temp == 2) { # referenced by field and temp
        return 0;
      }
    }
    {
      my $text = SPVM::String->new_with_string("abc");
      $text->substr(1, 1);
      my $temp = $text->_copy_value;
      unless (refcnt $temp == 2) {
        warn("substr is used. string is referenced by text's field and temp, but refcnt: " . refcnt $temp);
        return 0;
      }
    }
    {
      my $text = SPVM::String->new_with_string("abc");
      my $text_sub = $text->substr(1, 1);
      my $temp = $text_sub->_copy_value;
      unless (refcnt $temp == 3) {
        warn("substr is used and text_sub is created. string is referenced by text's and text_sub fields and temp, but refcnt: " . refcnt $temp);
        return 0;
      }
    }
    return 1;
  }

  sub test_copy : int () {
    my $text = SPVM::String->new_with_string("a");
    my $content = $text->_copy_value;
    unless (refcnt $content == 1) {
      return 0;
    }
    my $copied_text = $text->copy;
    unless (refcnt $content == 2) {
      warn("One copy runs but refcnt: " . refcnt $content);
      return 0;
    }
    return 1;
  }

  sub test_prepend : int () {
    my $text = SPVM::String->new;
    $text->prepend(SPVM::String->new_with_string("abc"));
    unless ($text->to_barray eq "abc") {
      return 0;
    }
    $text->prepend(SPVM::String->new_with_string("def"));
    unless ($text->to_barray eq "defabc") {
      return 0;
    }
    return 1;
  }

