    }
  }

  sub min : int ($x : int, $y : int) {
    if ($x < $y) {
      return $x;
    }
    else {
      return $y;
    }
  }

  sub min_long : long ($x : long, $y : long) {
    if ($x < $y) {
      return $x;
    }
    else {
      return $y;
    }
  }

  sub min_float : float ($x : float, $y : float) {
    if ($x < $y) {
