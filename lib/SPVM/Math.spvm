  sub max : int ($x : int, $y : int) {
    if ($x > $y) {
      return $x;
    }
    else {
      return $y;
    }
  }

  sub max_long : long ($x : long, $y : long) {
    if ($x > $y) {
      return $x;
    }
    else {
      return $y;
    }
  }

  sub max_float : float ($x : float, $y : float) {
    if ($x > $y) {
      return $x;
    }
    else {
      return $y;
    }
  }

  sub max_double : double ($x : double, $y : double) {
    if ($x > $y) {
      return $x;
    }
    else {
